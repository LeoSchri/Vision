
@model Vision_V1.Models.Information

@{
    ViewBag.Title = "Delete";
    ViewBag.Controller = "Information";

    var col = "col-lg-12";
    if (Model.Parent != null && Model.Parent.Parent != null)
    {
        col = "col-lg-11 col-lg-offset-1";
    }
}

<div class="@col">
    <div class="container title2">
        <div class="row padding-5">
            <div class="col-lg-12 padding-top-5">@Model.Name</div>
        </div>
    </div>

    <div class="container top-margin-10 padding-bottom-10">
        <div class="row">
            <div class="col-lg-12">
                @Html.DisplayFor(model => model.Content)
            </div>
        </div>
    </div>

    <div class="container top-margin-10 padding-bottom-10">
        <div class="row">
            <div class="col-lg-8">
                Are you sure you want to delete this Information?
            </div>
            <div class="col-lg-4">
                <span class="right">
                    <button type="submit" class="btn btn-success shadow">
                        <img src="~/Content/Icons/Tick.png" alt="Submit" class="small_image" />
                    </button>
                    <button type="button" class="btn btn-danger shadow" onclick="location.href='@Url.Action("Details", "Information")'">
                        <img src="~/Content/Icons/CancelWhite.png" alt="Cancel" class="small_image" />
                    </button>
                </span>
            </div>
        </div>
    </div>
</div>




