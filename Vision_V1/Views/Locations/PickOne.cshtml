@model List<Vision_V1.Models.Location>

@{
    ViewBag.Title = "PickOne";
    Layout = "~/Views/Shared/Templates/PickTemplate.cshtml";
}

@section Title{Locations}

@section Table{
    @if (Model == null || !Model.Any())
    {
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group padding-bottom-20">
                <div class="col-lg-8">
                    None
                </div>
                <div class="col-lg-4 right">
                    <button type="button" class="btn btn-success btn-xs right" onclick="location.href='@Url.Action((string)Session["method"],"Locations")'">
                        <img src="~/Content/Icons/Tick.png" alt="Choose this" class="smaller_image" />
                    </button>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12">
                    <button type="button" class="btn btn-danger shadow right" onclick="location.href='@Url.Action((string)Session["destinedMethod"],(string)Session["destinedController"])'">
                        <img src="~/Content/Icons/Cancel.png" alt="Cancel" class="small_image" />
                    </button>
                </div>
            </div>
        }
    }
    else
    {
        var color = Vision_V1.Models.Types.ColorSchema.PrimaryMedium;
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Description)
                </th>
                <th>
                    Located in
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Climate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().LastModified)
                </th>
                <th></th>
            </tr>

            @{
                var locationList = Model.OrderBy(model => model.Name).ToList();
            }
            @for (int i = 0; i < locationList.Count; i++)
            {
                <tr style="background-color:@color">
                    <td>
                        @Html.DisplayFor(modelItem => modelItem[i].Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem[i].Type)
                    </td>
                    <td>
                        @Model[i].DescriptionShort()
                    </td>
                    <td>
                        @if (Model[i].ParentId != null)
                        {
                            <span>
                                @Html.DisplayFor(modelItem => modelItem[i].Orientation) of @Html.DisplayFor(modelItem => modelItem[i].Parent.Name)
                            </span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem[i].Climate)
                    </td>
                    <td class="text-smaller">
                        @Html.DisplayFor(modelItem => modelItem[i].LastModified)
                    </td>
                    <td>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <div class="col-lg-1 right">
                                    <button type="button" class="btn btn-success btn-xs right" onclick="location.href='@Url.Action((string)Session["method"],"Locations", new { id= Model[i].ID })'">
                                        <img src="~/Content/Icons/Tick.png" alt="Choose this" class="smaller_image" />
                                    </button>
                                </div>
                            </div>
                        }
                    </td>
                </tr>
            }
            <tr style="background-color:@color">
                <td>
                    None
                </td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <div class="col-lg-1 right">
                                <button type="button" class="btn btn-success btn-xs right" onclick="location.href='@Url.Action((string)Session["method"],"Locations")'">
                                    <img src="~/Content/Icons/Tick.png" alt="Choose this" class="smaller_image" />
                                </button>
                            </div>
                        </div>
                    }
                </td>
            </tr>
        </table>
                using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <div class="col-lg-12">
                            <button type="button" class="btn btn-danger shadow right" onclick="location.href='@Url.Action((string)Session["destinedMethod"],(string)Session["destinedController"])'">
                                <img src="~/Content/Icons/CancelWhite.png" alt="Cancel" class="small_image" />
                            </button>
                        </div>
                    </div>
                    }
                }
}
