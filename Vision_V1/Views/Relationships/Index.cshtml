@model List<Vision_V1.Models.Relationship>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Templates/IndexTemplate.cshtml";
}

@section Title{Relationships}

@section Links{
    <span class="right">
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("PickForCPC","Characters")'">
            <img src="~/Content/Icons/New.png" alt="Create  relationship" class="small_image" />
        </button>
        @if (Vision_V1.ViewModels.PageManager.CurrentRelationship != null)
        {
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("IndexToList","Relationships")'">
                <img src="~/Content/Icons/Minimize.png" alt="Back to list" class="small_image" />
            </button>
        }
    </span>
}

@section Table{
    @if (Model == null || !Model.Any())
    {
        <div class="row">
            <div class="col-lg-11 col-lg-offset-1 padding-5">No Relationships yet.</div>
        </div>
    }
    else
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                </th>
                <th>
                    CP Character Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().LastModified)
                </th>
                <th></th>
            </tr>

            @{
                var relationshipList = Model.OrderBy(model => model.ID).ToList();
            }
            @foreach (var relation in relationshipList)
            {
                var color = Vision_V1.Models.Types.ColorSchema.PrimaryDark;
                <tr style="background-color:@color">
                    <td>
                        @Html.DisplayFor(modelItem => relation.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => relation.CounterpartCharacter.Name)
                    </td>
                    <td class="text-smallest">
                        @Html.DisplayFor(modelItem => relation.LastModified)
                    </td>
                    <td>
                        <span class="right">
                            <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Details","Relationships", new { id = relation.ID })'">
                                <img src="~/Content/Icons/Details.png" alt="Details" class="small_image" />
                            </button>
                            <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Create","RelationshipPhases", new { id = relation.ID })'">
                                <img src="~/Content/Icons/Add.png" alt="Delete" class="small_image" />
                            </button>
                            <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Delete","Relationships", new { id = relation.ID })'">
                                <img src="~/Content/Icons/Trash.png" alt="Delete" class="small_image" />
                            </button>
                        </span>
                    </td>
                </tr>
            }
        </table>
    }
}