@{
    ViewBag.Title = "PageView";
    Layout = "~/Views/Shared/PageLayout.cshtml";
}

@{ 
    var pages = Vision_V1.ViewModels.PageManager.Pages;
}

@if (pages != null && pages.Any())
{
