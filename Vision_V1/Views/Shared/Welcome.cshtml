
@{
    ViewBag.Title = "Welcome";
}

<div class="container top-margin-30 text-center" style="font-size:x-large;">
    <div class="row">
        <div class="col-lg-12 centered_text gray_text">You are currently not logged in.<br> Please log in or if you don't have an account yet, please register for free.</div>
    </div>
</div>

<div class="container top-margin-30 padding-bottom-20">
    <div class="row">
        <div class="col-lg-2 col-lg-offset-4">
            <button type="button" class="btn btn-success shadow btn-block" onclick="location.href='@Url.Action("Login", "Account", new { id = "loginLink" })'">
                <span>Log in</span>
            </button>
        </div>
        <div class="col-lg-2">
            <button type="button" class="btn btn-info shadow btn-block" onclick="location.href='@Url.Action("Register", "Account", new { id = "registerLink" })'">
                <span>Register</span>
            </button>
        </div>
    </div>
</div>

